{
    "name": "black-vscode",
    "displayName": "Black – Python code formatter",
    "description": "VS Code formatter plugin for ambv/black",
    "version": "1.2.2",
    "publisher": "joslarson",
    "author": "Joseph Larson <@joslarson>",
    "license": "BSD-3-Clause",
    "galleryBanner": {
        "color": "#262626",
        "theme": "dark"
    },
    "homepage": "https://marketplace.visualstudio.com/items?itemName=joslarson.black-vscode",
    "repository": {
        "type": "git",
        "url": "https://github.com/joslarson/black-vscode.git"
    },
    "engines": {
        "vscode": "^1.21.0"
    },
    "categories": [
        "Formatters"
    ],
    "activationEvents": [
        "*"
    ],
    "icon": "icon.png",
    "main": "./out/extension",
    "contributes": {
        "configuration": {
            "type": "object",
            "title": "Black – Python code formatter configuration",
            "properties": {
                "black.lineLength": {
                    "type": "integer",
                    "default": 88,
                    "description": "Sets the desired line length",
                    "scope": "resource"
                },
                "black.fast": {
                    "type": "boolean",
                    "default": false,
                    "description": "Skips temporary sanity checks",
                    "scope": "resource"
                },
                "black.path": {
                    "type": "string",
                    "default": "black",
                    "description": "Custom path to black. If you want to use the same instance of black for all your workspaces (like for projects using < Python 3.6.0), modify this setting to include the full path.",
                    "scope": "resource"
                },
                "black.debug": {
                    "type": "boolean",
                    "default": false,
                    "description": "Set to true to enable extension debugging output.",
                    "scope": "resource"
                }
            }
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "npm run compile && node ./node_modules/vscode/bin/test"
    },
    "devDependencies": {
        "typescript": "^2.6.1",
        "vscode": "^1.1.6",
        "tslint": "^5.8.0",
        "@types/node": "^7.0.43",
        "@types/mocha": "^2.2.42"
    }
}